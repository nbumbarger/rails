<h2>Play Flashcard Quiz</h2>
<h3>Select a Category</h3>
<ul class= "animation-slide-right">
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_question_path(category, category.questions.first) %></a>
      <span class="score">Score: <%= category.score %>/<%= category.points_possible %></span>
    </li>
  <% end %>
</ul>
